<style>
    .card-img-top {
        transition: transform 0.3s, opacity 0.3s;
    }

    .card {
        position: relative;
        overflow: hidden;
    }

    .card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card:hover::before {
        opacity: 1;
    }

    .welcome {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    h3 {
        margin-top: 50px;
        margin-bottom: 50px;
    }
</style>
