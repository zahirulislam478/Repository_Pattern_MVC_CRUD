@model M6_C8_P1.ViewModels.TeamEditModel
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="12">

        @using (Html.BeginForm("Edit", "Teams", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>
                @Html.HiddenFor(x => x.Id)
                <h5 class=" mt-3 d-flex justify-content-start"><strong>Edit Team Information...</strong></h5>
                @Html.Partial("_EditPartial", Model)
            </div>

            <div class="form-group row mt-5">
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" name="act" id="back" value="back">Back to Index</button>
                    <button type="submit" class="btn btn-primary" name="act" value="update">Save to database</button>
                </div>
            </div>
        }
    </div>
</div>

@section styles
{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

@section scripts {
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>


    <script>
        $(() => {
             $("#back").click(function () {
                var indexURL = "@Url.Action("Index", "Teams")";
                window.location.href = indexURL;
            });
        });
        $(() => {
            $("#Established").datepicker({
                format: "yyyy-mm-dd"
            });          
        });
    </script>
}


